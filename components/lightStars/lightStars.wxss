.star-container{
  display: inline-block;
}
.edge-huge view{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.edge-small view{
  margin-left: 2rpx;
  margin-right: 2rpx;
}
.edge-small:first-child view{
  margin-left:0;
}
.edge-small:last-child view{
  margin-right:0;
}
.edge-huge:first-child view{
  margin-left:0;
}
.edge-huge:last-child view{
  margin-right:0;
}

.base{
  background-image: url("data:image/svg+xml;base64,");
}
.base-mask{
