/**index.wxss**/
@import '/style/float-pic.wxss';
.icontainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  width:100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.company-icom{
  width: 160px;
  height: 160px;
}
.name{
  font-size: 40rpx;
  font-weight: 900;
  text-align: center;
  letter-spacing: 0.1em;
}
.slogan{
  font-size: 36rpx;
  font-weight: 900;
  text-align: center;
  letter-spacing: 0.1em;
  margin-top: 20rpx;
  padding-bottom:120rpx;
  margin-left:auto;
  margin-right: 110rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.textcontent{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-title{
  letter-spacing: 0.2em;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
}
.text-body{
  letter-spacing: 0.1em;
  line-height: 2;
  font-size: 32rpx;
  margin: 0 60px;
  /*text-align: center;*/
}
.clickable{
  font-size: 40rpx;
  text-align: center;  
}
.pic{
  -webkit-transform: translateZ(0) translateY(-110%);
  transition: all 0.2s ease-in-out;
}
.pic-hidden{
  -webkit-transform: translateZ(0) translateY(0%);
}

.gray{
	color:#999999;
}
#introduce{
  color:#999999;
  margin: 80rpx 110rpx 0 110rpx;
}
.button-view{
  margin-top:32rpx;
  margin-bottom: 30rpx;
  width: 74%;
}
image{
  margin-top: 30rpx;
  width: 78%;
}