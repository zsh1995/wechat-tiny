page{
  display: block;
  height:100%;
}
.item_sub{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  height: 100%;
  width:100%;
  margin: 3rpx;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  height: 33%;
  width:100%;
  margin-top: 3rpx;
  margin-bottom: 3rpx;
  justify-content:center;
}

.item_head{
  display: flex;
  letter-spacing: 0.1em;
  color: #aaa;
  margin: 10px 18px 10px 18px;
}

.item_sub_row{
  margin-top:40rpx;
  display: flex;
  flex-direction: row;
  margin-bottom:10px;
}

.item_icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.item_list{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    align-items: center;
}

.itemcontainer {
  height: 100%;
  max-width:100%;
  display: flex;
  background: #f8f8f8;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.mbutton{
margin-right:10rpx;
margin-left:10rpx;
color:black;
border:1px solid #000000;
line-height:2.00000006;
border-radius:6px;
padding-left:15px;
padding-right:15px;
font-size:17px;
}
.pass{
	color:#00C775 !important;
	border:1px solid #00C775 !important;
}

.title-content{
  display: block;
  height: auto;
}

@-webkit-keyframes disappear{
  100%{
    height: 0
  }
}