@import '/style/float-pic.wxss';
page{
  display: block;
  height:100%;
}
.item_sub{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  height: 100%;
  width:100%;
  margin: 3rpx;
}

.item {
  display: flex;
  flex-direction: column;
  background: #ffffff;
  height: 33%;
  width: calc(100% - 80rpx);
  padding:0 50rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  margin-left:40rpx;
  margin-right:40rpx;
  justify-content:center;
  box-shadow: 0 0 10px #999;
  box-sizing:border-box;
}
.item:first-child{
  margin-top:30rpx;
}
.item:last-child{
  margin-bottom:30rpx;
}

.item_head{
  display: flex;
  letter-spacing: 0.1em;
  color: #aaa;
  margin: 10px 18px 10px 18px;
}

.item_sub_row{
  align-items:baseline;
  justify-content:space-between;
  display: flex;
  margin:20rpx 10rpx;
}

.item_icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0rpx;
  border-radius: 50%;
}

.item_list{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    align-items: center;
}

.itemcontainer {
  height: 100%;
  max-width:100%;
  display: flex;
  background: #f8f8f8;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.mbutton{
margin-right:10rpx;
margin-left:10rpx;
color:black;
border:1px solid #000000;
line-height:2.00000006;
border-radius:6px;
padding-left:15px;
padding-right:15px;
font-size:17px;
}
.pass{
	color:#00C775 !important;
	border:1px solid #00C775 !important;
}

.title-content{
  display: block;
  height: auto;
  position: fixed;
  background-color: white;
  z-index: 11;
  box-shadow: 0 3px 2px #aaa;
  -webkit-transform: translateZ(0) translateY(-110%);
  transition: all 0.4s ease;
}

.content--disappear{
  -webkit-transform: translateZ(0) translateY(0);
}

@-webkit-keyframes disappear{
  100%{
    height: 0
  }
}
@-webkit-keyframes appear{
  100%{
    height:80px;
  }
}
.subTitle{
  margin:0 32rpx;
  color:#999999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

