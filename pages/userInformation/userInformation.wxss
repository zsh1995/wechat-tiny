/* userInformation.wxss */
page{
  height:100%;
  background: #FFFFFF;
}
.mycontainer{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 20rpx;
  background: #ffffff;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items:baseline;
  width: 100%;
}

.userinfo-avatar {
  position:relative;
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.userinfo-childcontain{
  display: flex;
  flex-wrap:wrap;
  align-self: center;
  flex-direction: column;
  height: auto;
  margin-top: 50rpx;
  flex:1;
}

.userinfo-nickname{
  font-size: 36rpx;
}

.userinfo-userinfo{
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 25rpx;
  align-self: center;
}
.userinfo-button{
  font-size:25rpx;
  position: relative;
  bottom: 15rpx;
  align-self: flex-end;
}

.mycontainer-listitem{
  background-image:url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;

}
.userinfo-info{
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:80%;
  flex:2;
}

.item_list{
    height:100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    max-width: 100%;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;

}

.itemcontainer {
  height:100%;
  max-width: 100%;
  display: flex;
  background: #ffffff;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:15rpx;
  background: #ffffff;
  padding:50rpx 0rpx 50rpx 0rpx;
  font-size: 36rpx;
  justify-content:center;
  border-top:1px solid #f0f0f0;
  border-bottom:1px solid #f0f0f0;
  letter-spacing: 0.1em;
  line-height:1;
}
.item::after{
	border:0px solid #f0f0f0;
}

.item_no_border{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:15rpx;
  background: #ffffff;
  padding:50rpx 0rpx 50rpx 0rpx;
  font-size: 36rpx;
  justify-content:center;
  letter-spacing: 0.1em;
  line-height:1;
}
.item_no_border::after{
	border:0px solid #f0f0f0;
}


.item_sub_row{
  margin-top:10rpx;
  display: flex;
  font-size:32rpx;
  flex-direction: row;
  align-items:center;
}
.zsh_input{
  flex:1;
}
.mybutton{
  margin-left:30rpx;
  margin-right:30rpx;
}

.gslm-cardbox{
  display: flex;
  flex-direction: column;
  margin-top:80rpx;
  border:3rpx solid #343B41;
  width:87%;
  border-radius:25rpx;
  background:#ffffff;
  padding:10rpx 30rpx 10rpx 30rpx;
 /* box-shadow: 3px 3px 1px #A8A8A8;*/
}
.gslm-cardbox_name{
	display:flex;
	flex-direction:row;
}
.userinfo-avatarshow {
  position:relative;
  width: 120rpx;
  height: 120rpx;
  margin: 15rpx 15rpx 15rpx 0rpx;
  border-radius: 50%;
}

.userinfo-rightbox{
	display:flex;
	flex-direction:column;
	align-self:center;
	align-items:flex-start;
	margin-left:20rpx;
}
.userinfo-bottombox{
	display:flex;
	flex-direction:row;
	margin-top:6rpx;
}
.userinfo-major{
	font-size:26rpx;
	margin-left:20rpx;
}
.userinfo-school{
	font-size:26rpx;
}
.gslm-cardbox_userinfo{
	display:flex;
	flex-direction:column;
	margin-top:50rpx;
}
.gslm-cardbox_id{
	margin-top:15rpx;
	margin-left:auto;
  font-weight: bold;
  letter-spacing: 1px;
}
.usermobile{
	margin:6rpx;
  font-size: 30rpx;
}
.usermail{
	margin:6rpx;
  font-size: 30rpx;
}
.userinfo-editor{
	width:38rpx;
	height:38rpx;
	margin-left:auto;
}
.bottom-box{
  width: 100%;
}

.cellinput{
	word-break:keep-all;
	white-space:nowrap;
}

