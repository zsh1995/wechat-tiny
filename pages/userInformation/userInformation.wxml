<!--userInformation.wxml-->
<view class="itemcontainer">
  <view class='title-content' wx:if="{{showTips}}" bindtap="fillInvitor">
    <text>您尚未填写邀请人！</text>
  </view>
  <view class="item_list">
    <view class="card-container">
      <view class="gslm-cardbox" style="{{cardboxStyle}}" bindtap='turnOver'>
        <view class="gslm-cardbox_name">
          <image class="userinfo-avatarshow" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
          <view class="userinfo-rightbox">
            <view class="userinfo-nickname">{{ourUserInfo.student_name==""||ourUserInfo.student_name==null?userInfo.nickName:ourUserInfo.student_name}}</view>
            <view class="userinfo-bottombox">
              <view class="userinfo-school">{{ourUserInfo.school}}</view>
              <view class="userinfo-major">{{ourUserInfo.major}}</view>
            </view>
          </view>
          <view class="userinfo-editor" catchtap="bindEdit">
            <view>编 辑</view>
          </view>

        </view>
        <view class="gslm-cardbox_userinfo">
          <view class="usermobile">手机：
            <view wx:if="{{ourUserInfo.phoneNumber==''}}" style="color:#7A7A7A">未填写</view>
            <view wx:if="{{ourUserInfo.phoneNumber!=''}}">{{ourUserInfo.phoneNumber}}</view>
          </view>
          <view class="usermail">邮箱：
            <view wx:if="{{ourUserInfo.emailAddr==''}}" style="color:#7A7A7A">未填写</view>
            <view wx:if="{{ourUserInfo.emailAddr!=''}}">{{ourUserInfo.emailAddr}}</view>
          </view>
          <view class="useradress"></view>
                  <view style='display:flex;'>
          <view class="gslm-cardbox_id">
            ID : {{ourUserInfo.id}}
          </view>
          <view class="gslm-cardbox_confirm" bindtap="gotoConfirm">
            <!--认证进度：{{rank}}星级>>>-->
          </view>
        </view>
        </view>


      </view>
      <!--
      <view class="gslm-cardbox-back" style="{{cardboxStyleAnti}}" bindtap='turnBack'>
        <view class="gslm-cardbox_userinfo">
          <view class="usermobile">身份：{{ourUserInfo.type}}</view>
          <view class="usermail">公司：{{ourUserInfo.wanted_company}}</view>
          <view class="useradress"></view>
        </view>
      </view>
      -->

    </view>
    <view class='bottom-hold'>
      <view class="bottom-box">
        <view class='column-p'>
          <view class="item_no_border" style='border-bottom:1px solid #f0f0f0;border-right:1px solid #f0f0f0;' bindtap="bindInvitor">
            邀请关系
          </view>
          <view class="item_no_border" style='border-bottom:1px solid #f0f0f0;border-left:1px solid #f0f0f0;' bindtap="doAccelarate">
            企业直推
          </view>
        </view>
        <view class='column-p'>
          <view class="item_no_border" style='border-top:1px solid #f0f0f0;border-right:1px solid #f0f0f0;' bindtap="getPayRecord">
            付费记录
          </view>
          <button class="item_no_border" style='border-top:1px solid #f0f0f0;border-left:1px solid #f0f0f0;' open-type="contact">
            联系我们
          </button>
        </view>


      </view>
    </view>
  </view>

</view>