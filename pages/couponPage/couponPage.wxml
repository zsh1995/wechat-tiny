<!--pages/couponPage/couponPage.wxml-->

<view class="contain_gslm">
  <view class="detail-head">
    <picker name="type" mode="selector" range="{{recordTypes}}" value="{{typeId}}" bindchange="chooseType">{{recordTypes[typeId]}}</picker>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="wholecontainer">
      <view class="zui-column">
        <view  class='item_style' wx:for="{{couponList}}">
          <view wx:if="{{typeId==0}}">
            <view style='text-align:left;'>{{item.name}}</view>
          </view>
          <view wx:if="{{typeId==1}}">
            <view wx:if='{{item.couponId == 1}}' style='text-align:left;'>{{item.name}}</view>
          </view>
          <view wx:if="{{typeId==2}}">
            <view wx:if='{{item.couponId == 2}}' style='text-align:left;'>{{item.name}}</view>
          </view>


        </view>
      </view>
      <view class="zui-column">
        <view class='item_style' wx:for="{{couponList}}">
          <view wx:if="{{typeId==0}}">
            <view style="color:#aaa">{{item.createTime}}</view>
          </view>
          <view wx:if="{{typeId==1 &&(item.couponId == 1)}}">
            <view style="color:#aaa">{{item.createTime}}</view>
          </view>
          <view wx:if="{{typeId==2 &&item.couponId == 2}}">
            <view style="color:#aaa">{{item.createTime}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>