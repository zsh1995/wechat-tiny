<!--examNotice.wxml-->
<view class="itemcontainer" wx:if='{{!isPassed}}'>
  <view class="item_title">
    <text>{{examData[examNumber].examTitle}}</text>
  </view>
  <scroll-view scroll-y class="item_content">
    <text>{{examData[examNumber].examContent}}</text>
  </scroll-view>
  <view class="button-item">
    <view style='padding:0 110rpx' hidden="{{ remainTimes<= 0 }}">
      <gsy-button  text-content='继 续 考 试' bindtap="gotoExam" data-option="goExam"></gsy-button>
    </view>
    <view style='padding:0 110rpx' hidden="{{ examTimes > 0 || remainTimes > 0 }}">
      <gsy-button  text-content='购 买 6 次 测 试 机 会' bindtap="gotoExam" data-option="pay"></gsy-button>
    </view>
    <view style='padding:0 110rpx' hidden="{{ examTimes <= 0 || remainTimes > 0 }}">
      <gsy-button  text-content='可使用{{examTimes}}次优惠券' bindtap="useCoupon" data-option="pay"></gsy-button>
    </view>


  </view>
</view>
