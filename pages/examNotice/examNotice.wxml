<!--examNotice.wxml-->
<view class="itemcontainer" wx:if='{{!isPassed}}'>
  <view class="item_title">
    <text>{{examData[examNumber].examTitle}}</text>
  </view>
  <scroll-view scroll-y class="item_content">
    <text>{{examData[examNumber].examContent}}</text>
  </scroll-view>
  <view class="button-item">
    <button hidden="{{ remainTimes<= 0 }}" class="weui-btn mbutton pass" plain="true" style="margin:0rpx 110rpx 0rpx 110rpx" bindtap="gotoExam" data-option="goExam">继 续 考 试</button>
    <button hidden="{{examTimes > 0 || remainTimes > 0}}" class="weui-btn mbutton pass" plain="true" style="margin:0rpx 110rpx 0rpx 110rpx" bindtap="gotoExam" data-option="pay">购 买 6 次 测 试 机 会</button>
    <button hidden="{{examTimes <= 0 || remainTimes > 0}}" class="weui-btn mbutton pass" plain="true" style="margin:0rpx 110rpx 0rpx 110rpx" bindtap="useCoupon" data-option="pay">可使用{{examTimes}}次优惠券</button>
  </view>
</view>
